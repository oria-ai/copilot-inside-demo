datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String    @id @default(uuid())
  email     String    @unique
  password  String
  department String
  copilotLanguage String
  studyingLanguage String
  role      String
  name      String?
  createdAt DateTime  @default(now())
  progress  Progress[]
  ratings   Rating[]
  feedback  Feedback[]
}

model Progress {
  id        Int      @id @default(autoincrement())
  userId    String
  lessonId  String
  percent   Float
  lastActivity String?
  lastStep   Int?
  updatedAt DateTime @updatedAt

  user      User     @relation(fields: [userId], references: [id])
  @@unique([userId, lessonId])
}

model Rating {
  id        Int      @id @default(autoincrement())
  userId    String
  lessonId  String
  stars     Int
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id])
  @@unique([userId, lessonId])
}

model Feedback {
  id        Int      @id @default(autoincrement())
  userId    String
  lessonId  String
  comment   String
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id])
}
